{
	"name": "@feather/auth",
	"private": true,
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./middleware": "./src/middleware.ts",
		"./client": "./src/client.ts",
		"./env": "./env.ts"
	},
	"license": "MIT",
	"scripts": {
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"lint": "biome lint",
		"format": "biome format",
		"check": "biome check",
		"check:fix": "biome check --write",
		"check:unsafe:fix": "biome check --write --unsafe",
		"generate": "dotenv -e ../../.env -- pnpx @better-auth/cli generate --config script/auth-cli.ts --output ../db/src/auth-schema.ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@better-auth/expo": "catalog:",
		"@feather/db": "workspace:*",
		"@t3-oss/env-core": "^0.13.8",
		"better-auth": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@better-auth/cli": "catalog:",
		"@feather/tsconfig": "workspace:*",
		"typescript": "catalog:"
	}
}
